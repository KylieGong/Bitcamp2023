{
    "manifest_version": 3,
    "name": "My Font Changer Extension",
    "version": "1.0",
    "description": "Change the font of web pages.",
    "host_permissions": [
        "<all_urls>", 
        "activeTab",
        "storage"
    ],
    "action": {
        "default_icon": "icons/image.png",
        "default_title": "options",
        "default_popup": "popup/options.html"
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }